{% extends 'base.html.twig' %}

{% block title %}Notes
{% endblock %}

{% block body %}
	<h1>Notes</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ note.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ note.title }}</td>
			</tr>
			<tr>
				<th>Content</th>
				<td>{{ note.Content }}</td>
			</tr>
			<tr>
				<th>Datetime</th>
				<td>{{ note.Datetime ? note.Datetime|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Urgency</th>
				<td>{{ note.Urgency ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_notes_index') }}">back to list</a>

	<a href="{{ path('app_notes_edit', {'id': note.id}) }}">edit</a>

	{{ include('notes/_delete_form.html.twig') }}
{% endblock %}
